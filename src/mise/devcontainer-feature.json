{
  "name": "mise-en-place",
  "id": "mise",
  "version": "1.2.0",
  "description": "Installs the mise CLI",
  "documentationURL": "https://github.com/atty303/devcontainer-features/tree/main/src/mise",
  "licenseURL": "https://raw.githubusercontent.com/jdx/mise/refs/heads/main/LICENSE",
  "options": {
    "version": {
      "type": "string",
      "default": "latest",
      "description": "Install a specific version"
    },
    "installPath": {
      "type": "string",
      "default": "/usr/local/bin/mise",
      "description": "Path to install mise"
    },
    "activate": {
      "type": "string",
      "proposals": ["none", "path", "shims"],
      "default": "path",
      "description": "Select how to activate mise in the system. `none` means no activation, `path` means add to PATH, and `shims` means use shims to activate. Supports bash and zsh."
    },
    "trust": {
      "type": "boolean",
      "default": true,
      "description": "Automatically run `mise trust` to trust workspace (**WARNING**: `mise.toml` in subdirectories will not be trusted even if this option is enabled)"
    },
    "install": {
      "type": "boolean",
      "default": true,
      "description": "Automatically run `mise install` to install workspace tools"
    }
  },
  "customizations": {
    "jetbrains": {
      "plugins": [
        "com.github.l34130.mise"
      ]
    },
    "vscode": {
      "extensions": [
        "hverlin.mise-vscode"
      ]
    }
  },
  "postCreateCommand": "/usr/local/share/mise-feature/post-create.sh",
  "installsAfter": ["ghcr.io/devcontainers/features/common-utils"]
}